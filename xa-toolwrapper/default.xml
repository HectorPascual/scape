<?xml version="1.0" encoding="UTF-8"?>
<toolspec project="SCAPE" year="2011">
    <id>copy</id>
    <name>Copy</name>
    <homepage>http://en.wikipedia.org/wiki/Cp_%28Unix%29</homepage>
    <services>
        <service id="simplecopy" name="Simple Copy" version="1.0" type="migrate" package="eu.scape_project.pc.services" deployment="d1" filters="f1">
            <description>Service for copying files</description>
            <operations>
                <operation name="simpleCopy">
                    <command>/bin/cp ${input} ${output}</command>
                    <inputs>
                        <input name="input">
                            <Datatype>xsd:anyURI</Datatype>
                            <Required>true</Required>
                            <Default>http://localhost:8080/scape/testdata/scape-logo.png</Default>
                            <CliMapping>input</CliMapping>
                            <Documentation>URL reference to input file</Documentation>
                        </input>
                    </inputs>
                    <outputs>
                        <output name="output">
                            <Datatype>xsd:anyURI</Datatype>
                            <CliMapping>output</CliMapping>
                            <Required>false</Required>
                            <Documentation>URL reference to output file</Documentation>
                        </output>
                    </outputs>
                </operation>
            </operations>
        </service>
    </services>
    <deployments>
        <deployment id="d1">
            <identifier>http://localhost:8080/scape/default/tomcat</identifier>
            <host>localhost</host>
            <ports>
                <port type="http">8080</port>
                <port type="https">8043</port>
            </ports>
            <manager>
                <user>tomcat</user>
                <password>TxF781!P</password>
            </manager>
            <dataexchange>
                <accessdir>/usr/local/java/apache-tomcat-6.0.29/webapps/ROOT/scape/tmp/</accessdir>
                <accessurl>http://localhost:8080/scape/tmp/</accessurl>
            </dataexchange>
        </deployment>
    </deployments>
    <filters>
        <filter id="f1" type="regex" datatype="xsd:anyURI">^(https?)://([a-zA-Z\\.]{1,20})([:]?)([0-9]{0,4})([a-zA-Z0-9-_/]{1,200})([\\.]?)([a-z]){0,4}</filter>
    </filters>
</toolspec>